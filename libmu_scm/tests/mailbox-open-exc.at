AT_SETUP([mu-mailbox-open exception])
AT_KEYWORDS([mailbox])
MU_GUILE_CHECK([
(catch 'mailutils-error
       (lambda ()
	 (mu-mailbox-open "NONEXISTENT" "r"))
       (lambda (key . rest)
	 (apply
	  (lambda (func fmt args syserr)
	    (apply format #t fmt args)
	    (newline))
	  rest)))],
 [0],
 [Cannot open default mailbox NONEXISTENT
])
AT_CLEANUP


  

