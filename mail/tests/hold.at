dnl             1      2      3       4       5 
dnl MAIL_TEST([NAME],[MBOX],[CODE],[INPUT],[OUTPUT])
m4_pushdef([MAIL_TEST],
 [AT_SETUP($1)
AT_CHECK(
 [AT_DATA([inbox],[$2])
AT_DATA([rc],[$4])
export MAIL=inbox
export MBOX=mbox
> $MBOX
CWD=$(pwd)
MUT_MAIL_CMD -N -E "set folder=$CWD" < rc | cwdrepl | sed -e 's/  *$//' 
$3
],
[0],
[$5])
AT_CLEANUP])

