AT_SETUP([send (record)])

AT_DATA([text],
[Test message.
Bye.
])

#
# Send with record
# 
AT_CHECK([unset MAIL_DUMP
RECORD=$(pwd)/record
MUT_MAIL_CMD -E "set sendmail=$MAILER" -E "set record=$RECORD" -s 'Test 22.2' gray@example.org < text
])

AT_CHECK([
sed -e '/^SENDER:/d' \
    -e '/^LENGTH:/d' \
    -e '/^Date:/d' \
    -e '/^User-Agent:/d' mail.dump],
[0],
[MSGID: 0001
NRCPT: 1
RCPT[[0]]: <gray@example.org>
Subject: Test 22.2
To: <gray@example.org>

Test message.
Bye.

])

AT_CHECK([
sed -e '1s/^From .*/Envelope/' \
    -e '/^X-[[a-zA-Z]]*:/d' \
    -e '/^User-Agent:/d' \
    -e '/^Date:/d' record],
[0],
[Envelope
Subject: Test 22.2
To: <gray@example.org>

Test message.
Bye.

])

AT_CLEANUP

