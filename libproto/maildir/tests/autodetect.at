AT_SETUP([format detection])
AT_KEYWORDS([autodetect])
AT_CHECK([
mkdir inbox inbox/cur inbox/new
mbop -m inbox --detect
],
[1],
[inbox: 0
])
AT_CHECK([
mkdir inbox/tmp
mbop -m inbox --detect
],
[0],
[inbox: 2
])
AT_CLEANUP
