m4_include([testsuite.inc])

dnl DM_TEST([NAME],[COMMAND],[MBOX],[OUTPUT])
m4_define([DM_TEST],
 [AT_SETUP($1)
AT_CHECK(
 [AT_DATA([dmbx],[$3])
MAIL=./dmbx
export MAIL
$2
],
[0],
[$4])
AT_CLEANUP])

dnl DM_MESG([NAME],[MBOX],[PRE],[POST],[INPUT],[OUTPUT])
m4_define([DM_MESG],
 [AT_SETUP($1)
AT_CHECK(
 [AT_DATA([dmbx],[$2])
AT_DATA([input],[$5]) 
$3
MAIL=./dmbx
export MAIL
mbop < input
$4
],
[0],
[$6])
AT_CLEANUP])
 
