	fields[2]: needsterminal

<stdin>:26-30: entry[5]
	typefield: text/html
	view-command: lynx -force_html '%s'
	fields[1]: description=HTML Text
	fields[2]: needsterminal
	fields[3]: nametemplate=%s.html

<stdin>:34-39: entry[6]
	typefield: text/*
	view-command: ${PAGER:-"more"} '%s'
	fields[1]: edit=${EDITOR:-"vi"} '%s'
	fields[2]: compose=${EDITOR:-"vi"} '%s'
