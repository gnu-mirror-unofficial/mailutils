AT_SETUP([Maxdepth])
AT_KEYWORDS([fsfolder maxdepth])

AT_CHECK([mkdir dir
mkdir dir/a
mkdir dir/a/b
mkdir dir/a/b/c
mkdir dir/a/b/c/d
mkdir dir/b
mkdir dir/b/b
mkdir dir/b/c
echo maxdepth=1
fsfolder -name=dir -sort scan -maxdepth=1
echo maxdepth=2
fsfolder -name=dir -sort scan -maxdepth=2
],
[0],
[maxdepth=1
d- /    0 dir/a
d- /    0 dir/b
maxdepth=2
d- /    0 dir/a
d- /    0 dir/b
d- /    1 dir/a/b
d- /    1 dir/b/b
d- /    1 dir/b/c
])
AT_CLEANUP
